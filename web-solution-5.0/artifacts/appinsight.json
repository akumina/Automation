{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "webAppInsightName": {
            "type": "string",
            "metadata": {
                "description": "Web app application insight name."
            }
        },
        "funcAppInsightName": {
            "type": "string",
            "metadata": {
                "description": "Function app application insight name."
            }
        }
    },
    "variables": {
        "webAppInsight": "[concat('microsoft.insights/components/',parameters('webAppInsightName'))]",
        "funcAppInsight": "[concat('microsoft.insights/components/',parameters('funcAppInsightName'))]"
    },
    "resources": [
        {
            "apiVersion": "2020-02-02-preview",
            "name": "[parameters('webAppInsightName')]",
            "type": "microsoft.insights/components",
            "location": "[parameters('location')]",
            "kind": "web",
            "properties": {
                "Application_Type": "web"
            }
        },
        {
            "apiVersion": "2020-02-02-preview",
            "name": "[parameters('funcAppInsightName')]",
            "type": "microsoft.insights/components",
            "location": "[parameters('location')]",
            "kind": "web",
            "properties": {
                "Application_Type": "web"
            }
        }
    ],
    "outputs": {
        "webAppInstrumentationKey": {
            "type": "string",
            "value": "[reference(variables('webAppInsight'), '2020-02-02-preview').InstrumentationKey]"
        },
        "webAppInsightAppId": {
            "type": "string",
            "value": "[reference(variables('webAppInsight'), '2020-02-02-preview').AppId]"
        },
        "webAppInsightConnectionString": {
            "type": "string",
            "value": "[reference(variables('webAppInsight'), '2020-02-02-preview').ConnectionString]"
        },
        "funcAppInstrumentationKey": {
            "type": "string",
            "value": "[reference(variables('funcAppInsight'), '2020-02-02-preview').InstrumentationKey]"
        },
        "funcAppInsightAppId": {
            "type": "string",
            "value": "[reference(variables('funcAppInsight'), '2020-02-02-preview').AppId]"
        },
        "funcAppInsightConnectionString": {
            "type": "string",
            "value": "[reference(variables('funcAppInsight'), '2020-02-02-preview').ConnectionString]"
        }
    }
}